<%- include('partials/head') -%>
<body class="">
  <!-- Page Main Container -->
  <main class="absolute w-full h-full overflow-hidden">
    <!-- Main Inner Container | width changes to show navbar -->
    <div
      id="mainInner"
      class="flex flex-row w-[calc(100%_+_72px)] sm:w-full h-full bg-slate-20 dark:bg-slate-800 ease duration-150"
    >
      <div
        class="flex flex-col w-full h-full p-4 sm:p-8 gap-4 sm:gap-8 grow min-h-0 z-10"
      >
        <!-- Page Heading -->
        <div class="flex flex-row w-full justify-between items-center">
          <div class="flex flex-col">
            <h1
              class="text-2xl font-semibold leading-6 text-gray-900 dark:text-slate-100 whitespace-nowrap"
            >
              Update Password
            </h1>
            <p
              class="mt-2 text-sm text-gray-700 dark:text-slate-300 whitespace-nowrap"
            >
              <%= user.name %>
            </p>
          </div>

          <div class="flex flex-row gap-4 sm:hidden">
            <span id="menu" class="fa-solid fa-bars fa-2x text-blue-700"></span>
          </div>
        </div>


  
      <!-- Page Section Container -->
      <section class="flex flex-col justify-center items-center h-full w-full">

        <% if(user.isAdmin) { %>
          <form action="/update/password/<%- displayedUser._id -%>?_method=PUT" method="POST">
        <% }else{ %> 
          <form action="/update/password?_method=PUT" method="POST">
        <% } %>
        

        <div class="grid grid-cols-1 grid-rows-1 gap-y-10 border-2 rounded-lg border-gray-400 p-10 w-full sm:w-[500px] self-center">

          <!-- Existing Password -->
            <div class="col-span-full">
              <label for="existingPassword" class="block text-sm font-medium leading-6 text-gray-900 dark:text-slate-100">Existing Password</label>
              <input 
                type="password" 
                class="block w-full border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-700 sm:text-sm sm:leading-6 dark:bg-blue-200 rounded-lg" 
                id="existingPassword" 
                name="existingPassword"
              >
              <% if (locals.messages.errors) { %>
                <% messages.errors.forEach( el => { %>
                  <% if (el.type === 'exPass') { %>
                    <span class="text-red-500 font-bold w-1/2 self-end"><%= el.msg %></span>
                    <% } %>
                <% }) %>    
              <% } %>
            </div>

            

            <!-- Password -->
            <div class="col-span-full">
              <label for="newPassword" class="block text-sm font-medium leading-6 text-gray-900 dark:text-slate-100">New Password</label>
              <input 
                type="password" 
                class="block w-full border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-700 sm:text-sm sm:leading-6 dark:bg-blue-200 rounded-lg" 
                id="newPassword" 
                name="newPassword"
              >
              <% if (locals.messages.errors) { %>
                <% messages.errors.forEach( el => { %>
                  <% if (el.type === 'passLength') { %>
                    <div class="text-red-500 font-bold w-1/2 self-end"><%= el.msg %></div>
                    <% } %>
                <% }) %>    
              <% } %>
            </div>

            <!-- Confirm Password -->
            <div class="col-span-full">
              <label for="confirmNewPassword" class="fblock text-sm font-medium leading-6 text-gray-900 dark:text-slate-100">Confirm New Password</label>
              <input 
                type="password" 
                class="block w-full border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-700 sm:text-sm sm:leading-6 dark:bg-blue-200 rounded-lg" 
                id="confirmNewPassword" 
                name="confirmNewPassword"
              >
              <% if (locals.messages.errors) { %>
                <% messages.errors.forEach( el => { %>
                  <% if (el.type === 'passMatch') { %>
                    <div class="text-red-500 font-bold w-1/2 self-end"><%= el.msg %></div>
                    <% } %>
                <% }) %>    
              <% } %>
          </div>

          <div class="col-span-full">

            <% if(user.isAdmin) { %>
              <a href="/dashboard" class="text-sm font-semibold leading-6 text-gray-900 dark:text-gray-300">Cancel</a>
            <% }else{ %>
              <a href="/directory" class="text-sm font-semibold leading-6 text-gray-900 dark:text-gray-300">Cancel</a>
            <% } %>

            <button type="submit" class="rounded-md bg-blue-700 ml-4 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-700">Update</button>
          </div>

        </div>
      </form>
      </section>


        <%- include('partials/btmLeftTxt') -%>
      </div>
      <!-- Nav Container -->
      <div id="navCont" class="h-full sm:block ease duration-150 min-w-[72px]">
        <%- include('partials/nav') -%>
      </div>
    </div>
  </main>

  <script type="text/javascript" src="/js/menu.js"></script>
  <%- include('partials/footer') -%>
</body>





