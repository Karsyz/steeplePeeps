<%- include('partials/head') -%>

<body class="flex flex-row justify-center items-center bg-slate-100 dark:bg-slate-800">
  <div class="md:w-3/5">

    <div class="flex min-h-full flex-col justify-center py-12 sm:px-6 lg:px-8">
      <a href="/" class="text-center"><i class="fa-solid fa-church fa-3x text-blue-700"></i></a>
      <div class="sm:mx-auto sm:w-full sm:max-w-md">
        <h2 class="mt-6 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900  dark:text-slate-100">Sign in with your email</h2>
      </div>

      <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-[480px]">
        <div class="bg-white  dark:bg-slate-400 px-6 py-12 shadow sm:rounded-lg sm:px-12">
          <form class="space-y-6" action="/emailLogin" method="POST">
            <div>
              <label for="inputEmail" class="block text-sm font-medium leading-6 text-gray-900 dark:text-slate-100">Email address</label>
              <div class="mt-2">
                <input 
                  id="email" 
                  name="email" 
                  type="email" 
                  autocomplete="email" 
                  aria-describedby="emailHelp" 
                  class="block w-full rounded-md border-0 py-1.5 dark:bg-slate-200 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-700 sm:text-sm sm:leading-6"
                  required 
                >
                
              </div>
              <% if (locals.messages.errors) { %>
                <% messages.errors.forEach( el => { %>
                  <% if (el.type === 'noUserFound') { %>
                    <div class="text-red-600 font-bold w-full self-end"><%= el.msg %></div>
                    <% } %>
                <% }) %>    
              <% } %>
            </div>

            <div>
              <button type="submit" class="flex w-full justify-center rounded-md bg-blue-700 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-blue-600 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-700">Submit</button>
            </div>
          </form>
      </div>
    </div>
  </div>

<%- include('partials/darkMode') -%>
<%- include('partials/footer') -%>
