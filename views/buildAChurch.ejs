<%- include('partials/head') -%>

<body class="flex flex-row justify-center items-center bg-slate-100 dark:bg-slate-800">
  <div class="md:w-3/5">

    <div class="flex min-h-full flex-col justify-center py-12 sm:px-6 lg:px-8">
      <a href="/" class="text-center"><i class="fa-solid fa-church fa-3x text-blue-700"></i></a>
      <div class="sm:mx-auto sm:w-full sm:max-w-md">
        <h2 class="mt-6 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900  dark:text-slate-100">Build a Church</h2>
      </div>

      <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-[480px]">
        <div class="bg-white  dark:bg-slate-400 px-6 py-12 shadow sm:rounded-lg sm:px-12">

          <form class="space-y-6" action="/buildAChurch/createUser" method="POST">

            <div>
              <label for="name" class="block text-sm font-medium leading-6 text-gray-900 dark:text-slate-100">Church Name</label>
              <div class="mt-2">
                <input 
                  id="name" 
                  name="name" 
                  type="name" 
                  autocomplete="name" 
                  aria-describedby="emailHelp"
                  class="block w-full rounded-md border-0 py-1.5 px-3 dark:bg-slate-200 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-700 sm:text-sm sm:leading-6"
                  required 
                >
              </div>
            </div>

            <div>
              <label for="inputEmail" class="block text-sm font-medium leading-6 text-gray-900 dark:text-slate-100">Email address</label>
              <div class="mt-2">
                <input 
                  id="inputEmail" 
                  name="email" 
                  type="email" 
                  autocomplete="email" 
                  aria-describedby="emailHelp" 
                  class="block w-full rounded-md border-0 py-1.5 dark:bg-slate-200 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-700 sm:text-sm sm:leading-6"
                  required 
                >
              </div>
            </div>

                  <div>
                    <label for="confirmEmail" class="block text-sm font-medium leading-6 text-gray-900 dark:text-slate-100">Confirm Email address</label>
                    <div class="mt-2">
                      <input 
                        id="confirmEmail" 
                        name="confirmEmail" 
                        type="email" 
                        autocomplete="email" 
                        aria-describedby="emailHelp" 
                        class="block w-full rounded-md border-0 py-1.5 dark:bg-slate-200 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-700 sm:text-sm sm:leading-6"
                        required 
                      >
                    </div>
                  </div>

            <div>
              <label for="inputPassword" class="block text-sm font-medium leading-6 text-gray-900 dark:text-slate-100">Password</label>
              <div class="mt-2">
                <input 
                id="inputPassword" 
                name="password" 
                type="password" 
                autocomplete="current-password" 
                required 
                class="block w-full rounded-md border-0 py-1.5 dark:bg-slate-200 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-700 sm:text-sm sm:leading-6"
                required 
              >
              </div>
            </div>

            <div>
              <label for="confirmPassword" class="block text-sm font-medium leading-6 text-gray-900 dark:text-slate-100">Confirm Password</label>
              <div class="mt-2">
                <input 
                id="confirmPassword" 
                name="confirmPassword" 
                type="password" 
                autocomplete="current-password" 
                required 
                class="block w-full rounded-md border-0 py-1.5 dark:bg-slate-200 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-700 sm:text-sm sm:leading-6"
                required 
              >
              </div>
            </div>

            <!-- Error Messaging -->
            <% if (locals.messages.errors) { %> 
              <% messages.errors.forEach( el => { %>
                <div class="text-gray-900 dark:text-slate-100 bg-red-500">
                <%= el.msg %></div>
                <% }) %> 
              <% } %> 
              
              <% if (locals.messages.info) { %> 
                  <% messages.info.forEach( el => { %>
                    <div class="text-gray-900 dark:text-slate-100 bg-yellow-200">
                    <%= el.msg %></div>
                <% }) %> 
              <% } %>

            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <input id="remember-me" name="remember-me" type="checkbox" class="h-4 w-4 rounded border-gray-400 text-blue-700 focus:ring-blue-700">
                <label for="remember-me" class="ml-3 block text-sm leading-6 text-gray-900 dark:text-slate-100">Remember me</label>
              </div>
            </div>

            <input type="hidden" value="true" id="isAdmin" name="isAdmin">

            <div>
              <button type="submit" class="flex w-full justify-center rounded-md bg-blue-700 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-blue-600 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-700">Build a Church</button>
            </div>
          </form>

          <div>
            <div class="relative mt-10">
              <div class="absolute inset-0 flex items-center" aria-hidden="true">
                <div class="w-full border-t border-gray-200"></div>
              </div>
              <div class="relative flex justify-center text-sm font-medium leading-6">
                <span class="bg-white dark:bg-slate-400 px-6 text-gray-900 dark:text-slate-100">Or continue with</span>
              </div>
            </div>

            <div class="mt-6 grid grid-cols-2 gap-4">
              <a href="#" class="flex w-full items-center justify-center gap-3 rounded-md bg-slate-200 px-3 py-1.5 text-white focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-[#1D9BF0]">
                <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24"><path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/><path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/><path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/><path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/><path d="M1 1h22v22H1z" fill="none"/></svg>
                <span class="text-sm font-semibold leading-6 sr-only">Google</span>
              </a>
              <a href="#" class="flex w-full items-center justify-center gap-3 rounded-md  bg-zinc-600 px-3 py-1.5 text-white focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-[#24292F]">
                <svg
                viewBox="0 0 21.573 19.5"
                version="1.1"
                id="svg4"
                width="21.573"
                height="19.5"
                xmlns="http://www.w3.org/2000/svg"
                xmlns:svg="http://www.w3.org/2000/svg">
               <defs
                  id="defs8" />
               <path
                  d="m 16.998462,0 h 3.308 l -7.227,8.26 8.502,11.24 h -6.657 l -5.2139994,-6.817 -5.966,6.817 H 0.43446256 L 8.1644626,10.665 0.00846256,0 H 6.8344626 l 4.7129994,6.231 z m -1.161,17.52 h 1.833 L 5.8384626,1.876 h -1.967 z"
                  id="path2" />
             </svg>
                <span class="text-sm font-semibold leading-6 sr-only">X</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

<%- include('partials/darkMode') -%>
