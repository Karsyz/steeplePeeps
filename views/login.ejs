<%- include('partials/head') -%>

<body class="flex flex-row justify-center items-center bg-slate-100 dark:bg-slate-800 w-full">

  <div class="w-full max-w-[500px]">

    <div class="flex h-full flex-col justify-center mt-8">
      <a href="/" class="text-center"><i class="fa-solid fa-church fa-3x text-blue-700"></i></a>
      <div class="">
        <h2 class="mt-6 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900  dark:text-slate-100">Sign in to your account</h2>
      </div>

      <div class="mt-10">
        <div class="bg-white dark:bg-slate-400 p-6 shadow rounded-lg sm:p-12">
          <form class="space-y-6" action="/login" method="POST">
            <div>
              <label for="inputEmail" class="block text-sm font-medium leading-6 text-gray-900 dark:text-slate-100">Email address</label>
              <div class="mt-2">
                <input 
                  id="inputEmail" 
                  name="email" 
                  type="email" 
                  autocomplete="email" 
                  aria-describedby="emailHelp" 
                  class="block rounded-md border-0 py-1.5 dark:bg-slate-200 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-700 sm:text-sm sm:leading-6 w-full"
                  required 
                >
              </div>
              <% if (locals.messages.errors) { %>
                <% messages.errors.forEach( el => { %>
                  <% if (el.type === 'noEmail') { %>
                    <div class="text-red-600 font-bold self-end"><%= el.msg %></div>
                    <% } %>
                <% }) %>    
              <% } %>
            </div>

            <div>
              <label for="inputPassword" class="block text-sm font-medium leading-6 text-gray-900 dark:text-slate-100">Password</label>
              <div class="mt-2">
                <input 
                id="inputPassword" 
                name="password" 
                type="password" 
                autocomplete="current-password" 
                required 
                class="block rounded-md border-0 py-1.5 dark:bg-slate-200 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-700 sm:text-sm sm:leading-6 w-full"
                required 
              >
              
              </div>
              <% if (locals.messages.errors) { %>
                <% messages.errors.forEach( el => { %>
                  <% if (el.type === 'passMatch') { %>
                    <div class="text-red-500 font-semibold self-end"><%= el.msg %></div>
                    <% } %>
                <% }) %>    
              <% } %>
            </div>

            <div class="flex items-center justify-between">

              <div class="text-sm leading-6">
                <a href="/emailLogin" class="font-semibold text-blue-700 hover:text-blue-600">Forgot password?</a>
              </div>
            </div>

            <div>
              <button type="submit" class="flex w-full justify-center rounded-md bg-blue-700 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-blue-600 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-700">Sign in</button>
            </div>
          </form>

          <div>
            <div class="relative mt-10">
              <div class="absolute inset-0 flex items-center" aria-hidden="true">
                <div class="w-full border-t border-gray-200"></div>
              </div>
              <div class="relative flex justify-center text-sm font-medium leading-6">
                <span class="bg-white dark:bg-slate-400 px-6 text-gray-900 dark:text-slate-100">Or continue with</span>
              </div>
            </div>

            <div class="mt-6 grid grid-cols-1 gap-4">

              <a href="/auth/google" class="flex w-full items-center justify-center gap-3 rounded-md bg-slate-200 px-3 py-1.5 text-white focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-[#1D9BF0]">
                <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24"><path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/><path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/><path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/><path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/><path d="M1 1h22v22H1z" fill="none"/></svg>
                <span class="text-sm font-semibold leading-6 sr-only">Google</span>
              </a>

            </div>
            <% if (locals.messages.errors) { %>
              <% messages.errors.forEach( el => { %>
                  <div class="text-red-600 font-bold self-end"><%= el.msg %></div>
              <% }) %>    
            <% } %>
          </div>
        </div>

        <p class="mt-10 text-center text-sm text-gray-500">
          Not a member?
          <a href="/buildAChurch" class="font-semibold leading-6 text-blue-700 hover:text-blue-600">Let's Build a Church</a>
        </p>
      </div>
    </div>
  </div>

<%- include('partials/darkMode') -%>
<%- include('partials/footer') -%>
