<%- include('partials/head') -%>
  <body class="relative flex flex-row justify-between bg-slate-20 dark:bg-slate-800 z-10 overflow-hidden">
    <main class="flex flex-col w-full h-screen overflow-hidden">
    
    <!-- Page Container -->
    <div class="flex flex-col grow m-0 w-full min-h-0">

      <!-- Page Heading -->
      <div class="pl-8 pr-4 sm:flex sm:items-center flex-row">

          <div class="sm:flex-auto">
              
              <h1 class="text-2xl mt-5 font-semibold leading-6 text-gray-900 dark:text-slate-100"><%= user.name %></h1>
              <p class="mt-2 text-sm text-gray-700 dark:text-slate-300">A list of all the users in your church</p>
          </div>

          <form action="/createUser" method="POST">
              <div class="flex flex-col ml-0 sm:ml-4 mb-4">
                  <div class="flex flex-row justify-end items-end mt-4">
                      <div class="w-full">
                          <!-- <label for="email" class="block text-sm font-medium leading-6 text-gray-900 dark:text-slate-100 mt-2">Quick Add User</label>  -->
                          <input 
                              id="email" 
                              name="email" 
                              type="email" 
                              placeholder="email@address.com"
                              class="block w-full rounded-md border-0 py-1.5 px-3 dark:bg-slate-200 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-700 sm:text-sm sm:leading-6"
                              required 
                          >
                      </div>
                      <div class="mt-4 self-end">
                          <button type="submit" class="block rounded-md bg-blue-700 px-3 py-2 ml-4 text-center text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 whitespace-nowrap">Add User</button>
                      </div>
                    </div>
                  <% if (locals.messages.errors) { %>
                    <% messages.errors.forEach( el => { %>
                      <% if (el.type === 'emailExists') { %>
                        <div class="mt-2 self-end">
                          <span class="text-sm text-red-500 font-semibold w-1/2 self-end"><%= el.msg %></span>
                          <a id="scrollToUser" href="#<%= el.id %>" class="inline text-sm text-blue-400 font-base w-1/2 self-end">Scroll to User</a>
                        </div>       
                        <script type="text/javascript" src="/js/scrollToErr.js"></script>               
                        <% } %>
                    <% }) %>    
                  <% } %>
                

              </div>       
          </form>
      </div>

      <!-- Scrollable Container -->
      <section class="ml-8 mr-4 mt-3 overflow-scroll no-scrollbar rounded-lg scroll-smooth">

      <div class="">
        <div class="">
          <div class="min-w-full">
            <table class="min-w-full divide-y divide-gray-300">
              <thead class="sticky top-0 bg-slate-300 h-10">
                <tr class="">
                  <th scope="col" class="whitespace-nowrap pl-4 text-center sm:text-left text-sm font-semibold text-gray-900">Name</th>
                  <th scope="col" class="whitespace-nowrap py-2 text-sm font-semibold text-gray-900 hidden md:table-cell">Txt Ok?</th>
                  <th scope="col" class="whitespace-nowrap py-2 text-sm font-semibold text-gray-900 hidden md:table-cell">Updated?</th>
                  <th scope="col" class="whitespace-nowrap py-2 text-sm font-semibold text-gray-900 hidden md:table-cell">Email Sent?</th>
                  <th scope="col" class="whitespace-nowrap py-2 text-sm font-semibold text-gray-900 hidden sm:table-cell">Controls</th>
                </tr> 
              </thead>
              <tbody class="divide-y divide-gray-200 bg-white dark:bg-slate-800">
              
              <% if (allUsers) { allUsers.forEach( el => { %>
                <tr id="<%=el._id%>">
                  <td class="whitespace-nowrap py-5 pr-3 text-sm pl-4 w-1/5">
                    <div class="flex items-center">
                      <div class="h-11 w-11 flex-shrink-0">
                        <img class="h-11 w-11 rounded-full" src="<%=el.image%>" alt="">
                      </div>
                      <div class="ml-4">
                          <div class="font-medium text-gray-900 dark:text-slate-100"><%=el.name%></div>
                          <div class="mt-1 text-gray-500 dark:text-slate-300"><%=el.email%></div>
                          <div class="mt-1 text-gray-500 dark:text-slate-300"><%=el.phoneNumber%></div>
                          <div class="whitespace-nowrap mt-1 text-right text-sm font-medium sm:pr-0 flex sm:hidden">
                              <%- include('partials/dashboardIcons', {el: el}) -%>
                          </div>
                      </div>
                    </div>
                  </td>
                  <td class="whitespace-nowrap text-center py-5 text-sm text-gray-500 hidden md:table-cell w-1/5">
                    <!-- <div class="text-gray-900">Front-end Developer</div> -->
                      <div class="mt-1 text-gray-500">
                          <% if (el.txtOk) { %><i class="fa fa-check"></i><% } %>
                      </div>
                  </td>
                  <td class="whitespace-nowrap text-center py-5 text-sm text-gray-500 hidden md:table-cell w-1/5">
                      <span class="inline-flex items-center rounded-md px-2 py-1 text-xs font-medium">
                          <% if (el.cloudinaryId !== "") { %><i class="fa fa-check"></i><% } %>
                      </span>
                  </td>

                  <td class="whitespace-nowrap text-center py-5 text-sm text-gray-500 hidden md:table-cell w-1/5">
                      <span class="inline-flex items-center rounded-md px-2 py-1 text-xs font-medium">
                          <% if (el.numOfEmailsSent !== 0) { %><i class="fa fa-check"></i><% } %>
                      </span>
                  </td>

                  <td class="whitespace-nowrap text-center py-5 text-sm text-gray-500 hidden sm:table-cell w-1/5">
                      <%- include('partials/dashboardIcons', {el: el}) -%>
                  </td>
                </tr>
                <% })} %>
    

              </tbody>
            </table>
          </div>
        </div>
      </div>
      </section>

    </div>


    <%- include('partials/btmLeftTxt') -%>
</main>
<%- include('partials/nav') -%>
<%- include('partials/profileCardModal') -%>
<%- include('partials/darkMode') -%>
<%- include('partials/footer') -%>