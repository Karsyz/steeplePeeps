<%- include('partials/header') -%>
<%- include('partials/btmLeftTxt') -%>
<%- include('partials/darkMode') -%>
<%- include('partials/navBar') -%>
<main class="d-flex flex-column justify-content-center">
  <section>
    <div class="d-flex flex-row justify-content-center ">
      
    </div>
    
    <div class="d-flex flex-row justify-content-center">
      
      <div class="col-3">
          <h1 class="ts">Edit Profile</h1>
          <p><strong>Name:</strong> <%= user.name %></p>
          <p><strong>Email:</strong> <%= user.email %></p>
          <div class="position-relative">
            <a href="/userProfile/updatePicture" class="position-absolute bottom-0 end-0 me-2 mb-2"><i class="fa fa-cog fa-2x"></i></a>    
            <img class="img-fluid rounded-3" src="https://www.fillmurray.com/500/500" alt="Picture Of User">
          </div>
          <h3 class="mt-5"><a class="text-decoration-none text-dark" href="/updatePassword/:id">Update Password</a></h3>
          <h3 class="mt-3"><a class="text-decoration-none text-dark" href="#">Setup 2FA</a></h3>
      </div>
      <div class="col-3 mx-5 cmt-1">
        <h3 class="">Phone Number</h3>
        <form action="/userProfile/userProfileUpdate" enctype="multipart/form-data" method="POST">
          <div class="mb-3">
            <input type="text" class="form-control" placeholder="555 515 2212" id="phoneNumber" name="phoneNumber">
          </div>
          <div class="mb-3 form-check form-switch">
            <label for="txtOk" class="form-label">Text Message Ok?</label>
            <input class="form-check-input" type="checkbox" id="txtOk" checked>
          </div>
          <div class="mb-3">
            <h3>Bio</h3>
            <textarea class="form-control bioForm" placeholder="Retired Teacher, love to golf, and I'm here to help where and when I can." id="bioForm"></textarea>
          </div>
          <div class="mb-3">
            <h3>I can Help with</h3>
            <textarea class="form-control bioForm" placeholder="I can help with yard work, bible study, cooking" id="iCanHelpWith"></textarea>
          </div>
      </div>
      <div class="col-3 cmt-1 position-relative">
        <h3 class="">Mailing Address</h3>
          <div class="mb-3">
              <input type="text" class="form-control" placeholder="Address 1" id="address1" name="address1">
              <input type="text" class="form-control mt-2" placeholder="Address 2" id="address2" name="address2">
              <input type="text" class="form-control mt-2" placeholder="City" id="City" name="city">
              <input type="text" class="form-control mt-2" placeholder="Province" id="province" name="province">
              <input type="text" class="form-control mt-2" placeholder="Country" id="country" name="country">
              <input type="text" class="form-control mt-2" placeholder="Postal Code" id="postCode" name="postCode">
          </div>

          <button type="submit" class="position-absolute btn btn-primary col-4 bottom-0 end-0 me-2 mb-2" value="userProfileUpdate">Update</button>
        </form>
      </div>
    </div>
  </section>
</main>
<%- include('partials/footer') -%>